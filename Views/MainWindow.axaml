<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Log_Parser_App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Log_Parser_App.Converters"
        xmlns:models1="clr-namespace:Log_Parser_App.Models"
        xmlns:views="clr-namespace:Log_Parser_App.Views"
        xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:lvccore="using:LiveChartsCore"
        xmlns:lvcskt="using:LiveChartsCore.SkiaSharpView"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="Log_Parser_App.Views.MainWindow"
        x:Name="mainWindowInstance"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logparserv1.ico"
        Title="LogParser - Log Analyzer"
        MinWidth="950" MinHeight="650"
        Background="#1A1C21"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        
        <!-- Color/Brush Resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1C21" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#22252D" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4E72C8" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#5D6B8E" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C80BC" />
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5F7" />
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12" />
        <SolidColorBrush x:Key="InfoBrush" Color="#3498DB" />
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.icon-button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.2" />
                    <BrushTransition Property="Background" Duration="0.2" />
                    <BrushTransition Property="Foreground" Duration="0.2" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="#ffffff" />
                <Setter Property="RenderTransform" Value="scale(1.05)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.95)" />
            </Style>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Padding" Value="8" />
            <Style Selector="^:nth-child(odd)">
                <Setter Property="Background" Value="#262729" />
            </Style>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#3D3E42" />
            </Style>
            <Style Selector="^:selected">
                <Setter Property="Background" Value="#4A4C53" />
            </Style>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#22252D" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BoxShadow" Value="0 4 16 0 #15000000" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0.2" />
                    <ThicknessTransition Property="Margin" Duration="0.2" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 6 20 0 #20000000" />
            <Setter Property="Margin" Value="8 6 12 14" />
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 10" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#5A80D3" />
                <Setter Property="RenderTransform" Value="scale(1.02)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.98)" />
            </Style>
        </Style>
        
        <Style Selector="Button.remove-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8 0 0 0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.remove-button:pointerover">
            <Setter Property="Background" Value="#4E3636" />
            <Setter Property="Foreground" Value="#F15B5B" />
        </Style>
        
        <Style Selector="Button.add-button">
            <Setter Property="Background" Value="#357538" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 6" />
            <Setter Property="Margin" Value="0 12 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.add-button:pointerover">
            <Setter Property="Background" Value="#4CAF50" />
        </Style>
        
        <Style Selector="Button.apply-filters-button">
            <Setter Property="Background" Value="#4e72c8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="Margin" Value="0 12 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-filters-button:pointerover">
            <Setter Property="Background" Value="#5a80d3" />
        </Style>
        
        <Style Selector="Button.reset-filters-button">
            <Setter Property="Background" Value="#7c8694" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="Margin" Value="0 12 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.reset-filters-button:pointerover">
            <Setter Property="Background" Value="#8d98a6" />
        </Style>
        
        <Style Selector="Button.apply-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-button:pointerover">
            <Setter Property="Background" Value="#36544E" />
            <Setter Property="Foreground" Value="#5BF15B" />
        </Style>
    </Window.Styles>

    <Panel>
        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Padding="16" 
                    Background="#262729"
                    Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Button Classes="icon-button" 
                                ToolTip.Tip="Load file"
                                Command="{Binding MainView.LoadFileCommand}">
                            <TextBlock Text="ðŸ“" FontSize="18" />
                        </Button>
                        <Button Classes="icon-button" 
                                ToolTip.Tip="Dashboard"
                                Command="{Binding ToggleDashboardVisibilityCommand}">
                            <TextBlock Text="ðŸ“Š" FontSize="18" />
                        </Button>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding MainView.FileStatus}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="#CCCCCC"
                               FontSize="14" />
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Button Classes="icon-button"
                                ToolTip.Tip="Check for updates"
                                Command="{Binding CheckForUpdatesAsyncCommand}">
                            <TextBlock Text="ðŸ”„" FontSize="18" />
                        </Button>
                        
                        <Border Background="#A33F3F" 
                                CornerRadius="4" 
                                Padding="8,4" 
                                IsVisible="{Binding IsUpdateAvailable}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Update available!" 
                                           Foreground="White" 
                                           VerticalAlignment="Center" 
                                           FontSize="12" />
                                <Button Content="Install" 
                                        Padding="8,2" 
                                        FontSize="12"
                                        Background="#4CAF50"
                                        Command="{Binding InstallUpdateCommand}" />
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="{Binding AppVersion}" 
                                   VerticalAlignment="Center" 
                                   Foreground="#AAAAAA"
                                   FontSize="12" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Margin="16,8,16,16" Padding="16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Update Block -->
                    <Border Grid.Column="3" Background="#382626" CornerRadius="8" Padding="16" Margin="8" 
                            IsVisible="{Binding IsUpdateAvailable}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Update available" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding AvailableUpdate.Version, StringFormat='Version: {0}'}" 
                                       Foreground="#AAAAAA" 
                                       HorizontalAlignment="Center" />
                            <Button Content="Install" 
                                    Command="{Binding InstallUpdateCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="10,5"
                                    HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="0" Margin="4" Padding="16,12" Background="#382626" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”´" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="ERRORS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.ErrorCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#F15B5B" />
                            <TextBlock Text="{Binding MainView.ErrorPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="4" Padding="16,12" Background="#3A3320" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŸ " FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="WARNINGS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.WarningCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#F9A825" />
                            <TextBlock Text="{Binding MainView.WarningPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Margin="4" Padding="16,12" Background="#263238" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”µ" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="INFORMATION" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.InfoCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#64B5F6" />
                            <TextBlock Text="{Binding MainView.InfoPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Margin="4" Padding="16,12" Background="#2A2A2A" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âšª" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="OTHERS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.OtherCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#BBBBBB" />
                            <TextBlock Text="{Binding MainView.OtherPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <Border Grid.Row="2" Margin="16,0,16,16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TabControl Grid.Column="0" SelectedIndex="{Binding MainView.SelectedTabIndex}">
                        <TabItem Header="All entries">
                            <Grid RowDefinitions="Auto, *"> 
                                <!-- Row 0 for Filters -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10" Margin="8,0,0,8">
                                    <Button Content="+ Add Filter" Classes="add-button" Command="{Binding AddFilterCriterionCommand}" Padding="10,4" FontSize="12" MinWidth="0" MinHeight="0" Margin="0" />
                                    <Button Content="âœ”ï¸ Apply Filters" Classes="apply-filters-button" Command="{Binding ApplyFiltersCommand}" Padding="10,4" FontSize="12" Margin="0" />
                                    <Button Content="ðŸ”„ Reset Filters" Classes="reset-filters-button" Command="{Binding ResetFiltersCommand}" Padding="10,4" FontSize="12" Margin="0" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding FilterCriteria}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" Spacing="6" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models1:FilterCriterion">
                                            <Border Background="#2D2E32" CornerRadius="6" Padding="12 8">
                                                <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" VerticalAlignment="Center">
                                                    <ComboBox Grid.Column="0"
                                                              ItemsSource="{Binding ParentViewModel.AvailableFields}"
                                                              SelectedItem="{Binding SelectedField}"
                                                              MinWidth="150"
                                                              Margin="0,0,5,0"/>
                                                    <ComboBox Grid.Column="1"
                                                              ItemsSource="{Binding AvailableOperators}"
                                                              SelectedItem="{Binding SelectedOperator}"
                                                              MinWidth="100"
                                                              Margin="0,0,5,0"/>
                                                    <Panel Grid.Column="2" Margin="0,0,5,0">
                                                        <ComboBox IsVisible="{Binding ShowValueComboBox}"
                                                                 ItemsSource="{Binding AvailableValues}"
                                                                 SelectedItem="{Binding Value}"
                                                                 PlaceholderText="Select a value"
                                                                 MinWidth="150"/>
                                                        <TextBox IsVisible="{Binding !ShowValueComboBox}"
                                                                Text="{Binding Value}"
                                                                Watermark="Value"
                                                                VerticalAlignment="Center"/>
                                                    </Panel>
                                                    <Button Grid.Column="3"
                                                            Content="âœ“"
                                                            Command="{Binding ParentViewModel.ApplyFilterCriterionCommand}"
                                                            CommandParameter="{Binding}"
                                                            Classes="apply-button"
                                                            Margin="0,0,5,0"/>
                                                    <Button Grid.Column="4"
                                                            Content="âœ•"
                                                            Command="{Binding ParentViewModel.RemoveFilterCriterionCommand}"
                                                            CommandParameter="{Binding}"
                                                            Classes="remove-button"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- Row 1 for DataGrid -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <DataGrid ItemsSource="{Binding MainView.FilteredLogEntries}"
                                              SelectedItem="{Binding MainView.SelectedLogEntry, Mode=TwoWay}"
                                              Classes="visible"
                                              CanUserReorderColumns="True"
                                              IsReadOnly="True"
                                              GridLinesVisibility="Horizontal"
                                              BorderThickness="0"
                                              RowBackground="#2D2E32">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150" />
                                            <DataGridTemplateColumn Header="Level" Width="130">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                            <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                            <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="120" />
                                            <DataGridTemplateColumn Header="Message" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <Button Background="Transparent" BorderThickness="0" Padding="2,1" Command="{Binding OpenFileCommand}" CommandParameter="{Binding}">
                                                            <TextBlock Text="{Binding DisplayMessage}" TextWrapping="Wrap" FontWeight="Normal" FontSize="13"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Recommendations" Width="350">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" IsVisible="{Binding HasRecommendations}">
                                                            <StackPanel Margin="6">
                                                                <TextBlock Text="{Binding ErrorDescription}" 
                                                                           TextWrapping="Wrap"
                                                                           FontSize="12" 
                                                                           Foreground="#CCCCCC"
                                                                           Margin="0,0,0,8"/>
                                                                <ItemsControl ItemsSource="{Binding ErrorRecommendations}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                                                                <TextBlock Text="â€¢" 
                                                                                         Foreground="#64B5F6" 
                                                                                         FontWeight="Bold" 
                                                                                         Margin="0,0,8,0"
                                                                                         VerticalAlignment="Top"/>
                                                                                <TextBlock Text="{Binding}"
                                                                                         TextWrapping="Wrap"
                                                                                         FontSize="12"
                                                                                         LineHeight="18"
                                                                                         Foreground="#E0E0E0"
                                                                                         MaxWidth="300"/>
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock Text="Errors only" FontWeight="SemiBold" FontSize="14" />
                            </TabItem.Header>
                            <Grid RowDefinitions="*"> <!-- Single row Grid for DataGrid -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <dataGrid:DataGrid ItemsSource="{Binding MainView.ErrorLogEntries}"
                                              SelectedItem="{Binding MainView.SelectedLogEntry, Mode=TwoWay}"
                                              Classes="visible"
                                              CanUserReorderColumns="True"
                                              IsReadOnly="True"
                                              GridLinesVisibility="Horizontal"
                                              BorderThickness="0"
                                              RowBackground="#2D2E32">
                                        <dataGrid:DataGrid.Columns>
                                            <dataGrid:DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150" />
                                            <DataGridTemplateColumn Header="Level" Width="130">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                            <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                            <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="120" />
                                            <DataGridTemplateColumn Header="Message" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <Button Background="Transparent" BorderThickness="0" Padding="2,1" Command="{Binding OpenFileCommand}" CommandParameter="{Binding}">
                                                            <TextBlock Text="{Binding DisplayMessage}" TextWrapping="Wrap" FontWeight="Normal" FontSize="13"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="Recommendations" Width="350">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" IsVisible="{Binding HasRecommendations}">
                                                            <StackPanel Margin="6">
                                                                <TextBlock Text="{Binding ErrorDescription}" 
                                                                           TextWrapping="Wrap"
                                                                           FontSize="12" 
                                                                           Foreground="#CCCCCC"
                                                                           Margin="0,0,0,8"/>
                                                                <ItemsControl ItemsSource="{Binding ErrorRecommendations}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                                                                <TextBlock Text="â€¢" 
                                                                                         Foreground="#64B5F6" 
                                                                                         FontWeight="Bold" 
                                                                                         Margin="0,0,8,0"
                                                                                         VerticalAlignment="Top"/>
                                                                                <TextBlock Text="{Binding}"
                                                                                         TextWrapping="Wrap"
                                                                                         FontSize="12"
                                                                                         LineHeight="18"
                                                                                         Foreground="#E0E0E0"
                                                                                         MaxWidth="300"/>
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </dataGrid:DataGrid.Columns>
                                    </dataGrid:DataGrid>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
            
            <!-- Dashboard Panel -->
            <Grid 
                IsVisible="{Binding IsDashboardVisible}"
                Grid.Row="2" Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#222326"
                ZIndex="100">
                <Grid RowDefinitions="Auto,*">
                    <!-- Dashboard Header -->
                    <Border Grid.Row="0" Background="#262729" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Log Analysis Dashboard" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                            <Button Grid.Column="1" Classes="icon-button" Command="{Binding ToggleDashboardVisibilityCommand}" ToolTip.Tip="Close Dashboard">
                                <TextBlock Text="âœ–" FontSize="16" />
                            </Button>
                            <Button Grid.Column="2" Classes="icon-button" Command="{Binding MainView.LoadFileCommand}" ToolTip.Tip="Load New File">
                                <TextBlock Text="ðŸ“‚" FontSize="16" />
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Dashboard Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="16">
                             <!-- Log Statistics -->
                            <Border Background="#2D2F33" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                              <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*,*" Margin="0">
                                 <!-- Total logs -->
                                <Border Grid.Column="0" Grid.Row="0" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Total Logs" FontSize="14" Foreground="#AAAAAA" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="ðŸ“" FontSize="22" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.TotalCount}" FontSize="24" FontWeight="Bold" Foreground="White" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                 
                                 <!-- Errors count -->
                                <Border Grid.Column="1" Grid.Row="0" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Errors" FontSize="14" Foreground="#AAAAAA" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="âŒ" FontSize="22" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.ErrorCount}" FontSize="24" FontWeight="Bold" Foreground="#FF6347" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.ErrorPercent, StringFormat='{}{0:0.0}%'}" FontSize="14" Foreground="#AAAAAA" VerticalAlignment="Bottom" Margin="5,0,0,3" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                 
                                 <!-- Warnings count -->
                                <Border Grid.Column="2" Grid.Row="0" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Warnings" FontSize="14" Foreground="#AAAAAA" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="âš ï¸" FontSize="22" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.WarningCount}" FontSize="24" FontWeight="Bold" Foreground="#FFA500" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.WarningPercent, StringFormat='{}{0:0.0}%'}" FontSize="14" Foreground="#AAAAAA" VerticalAlignment="Bottom" Margin="5,0,0,3" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                 
                                 <!-- Info logs count -->
                                <Border Grid.Column="3" Grid.Row="0" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Information" FontSize="14" Foreground="#AAAAAA" />
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="â„¹ï¸" FontSize="22" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.InfoCount}" FontSize="24" FontWeight="Bold" Foreground="#1E90FF" />
                                            <TextBlock Text="{Binding MainView.LogStatistics.InfoPercent, StringFormat='{}{0:0.0}%'}" FontSize="14" Foreground="#AAAAAA" VerticalAlignment="Bottom" Margin="5,0,0,3" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <!-- Daily Activity - mini chart tile -->
                                <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Daily Activity" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,8" />
                                        <lvc:CartesianChart
                                            Series="{Binding MainView.ErrorTrendSeries}"
                                            XAxes="{Binding MainView.HoursAxis}"
                                            YAxes="{Binding MainView.CountAxis}"
                                            TooltipPosition="Top"
                                            Height="80"
                                            LegendPosition="Hidden"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Log Distribution - mini chart tile -->
                                <Border Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Background="#272932" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="8" Margin="5" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="Log Distribution" FontSize="14" Foreground="#AAAAAA" Margin="0,0,0,8" />
                                        <Grid>
                                            <lvc:PieChart
                                                Series="{Binding MainView.LogDistributionSeries}"
                                                Height="80"
                                                LegendPosition="Hidden"/>
                                            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    Width="40" Height="40" CornerRadius="20" 
                                                    Background="#272932">
                                                <TextBlock Text="{Binding MainView.LogStatistics.TotalCount}" 
                                                        FontSize="14" FontWeight="SemiBold" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center" />
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                              </Grid>
                            </Border>
                             
                            <!-- Main dashboards in two columns -->
                            <Grid ColumnDefinitions="*,*" Margin="0,0,0,20">
                                <!-- Left column -->
                                <StackPanel Grid.Column="0" Margin="5,0,10,0" Spacing="20">
                                    <!-- Log Type Distribution Chart -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Log Type Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="220">
                                                <lvc:PieChart
                                                    Series="{Binding MainView.LogDistributionSeries}"
                                                    Width="300"
                                                    Height="300"
                                                    LegendPosition="Right"
                                                    TooltipPosition="Right" />
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                
                                    <!-- Activity Heat Map -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Activity Heat Map" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="200">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.TimeHeatmapSeries}"
                                                    XAxes="{Binding MainView.HoursAxis}"
                                                    Width="440"
                                                    Height="200"
                                                    LegendPosition="Hidden" />
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Log Sources Distribution -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Log Source Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="300">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.SourcesDistributionSeries}"
                                                    XAxes="{Binding MainView.SourceAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="440" 
                                                    Height="300"
                                                    LegendPosition="Hidden" />
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Right column -->
                                <StackPanel Grid.Column="1" Margin="10,0,5,0" Spacing="20">
                                    <!-- Logs By Time Chart -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <TextBlock Text="Logs By Time" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Left" />
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                                                    <Border Background="#494A52" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Text="Zoom: Mouse Wheel" FontSize="12" Foreground="#AAAAAA" />
                                                    </Border>
                                                    <Border Background="#494A52" CornerRadius="4" Padding="6,2">
                                                        <TextBlock Text="Pan: Click &amp; Drag" FontSize="12" Foreground="#AAAAAA" />
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                            <Viewbox MaxHeight="300">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.LevelsOverTimeSeries}"
                                                    XAxes="{Binding MainView.TimeAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="540"
                                                    Height="300"
                                                    TooltipPosition="Top"
                                                    LegendPosition="Right"
                                                    AnimationsSpeed="00:00:00.700"
                                                    ZoomMode="X" />
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Top Errors Chart -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Top 10 Error Messages" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="400">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.TopErrorsSeries}"
                                                    XAxes="{Binding MainView.ErrorMessageAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="440"
                                                    Height="400"
                                                    LegendPosition="Hidden" />
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                         </StackPanel>
                     </ScrollViewer>
                 </Grid>
            </Grid>
            
            <Panel Grid.Row="2" IsVisible="{Binding MainView.IsLoading}">
                <Border Background="#55262729" 
                        Opacity="0.9" 
                        CornerRadius="8">
                    <StackPanel Spacing="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                   Width="220" />
                        <TextBlock Text="{Binding MainView.StatusMessage}"
                                   HorizontalAlignment="Center" 
                                   Foreground="#FFFFFF"
                                   FontSize="14" />
                    </StackPanel>
                </Border>
            </Panel>
            
            <Border Grid.Row="3" 
                    Padding="16,12"
                    Background="#262729">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding MainView.StatusMessage}" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Foreground="#CCCCCC"
                              FontSize="14" />
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding MainView.LogEntries.Count, StringFormat=Total entries: {0}}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Foreground="#AAAAAA"
                               Margin="16,0,0,0"
                               FontSize="13" />
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding AppVersion}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Foreground="#777777"
                               Margin="16,0,16,0"
                               FontSize="12" />
                </Grid>
            </Border>
        </Grid>
    </Panel>
</Window>
