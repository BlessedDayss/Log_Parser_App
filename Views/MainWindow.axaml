<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LogParserApp.ViewModels"
        xmlns:models="using:LogParserApp.Models"
        xmlns:conv="using:LogParserApp.Converters"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:views="clr-namespace:LogParserApp.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="LogParserApp.Views.MainWindow"
        x:Name="mainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logparserv1.ico"
        Title="LogParser - Log Analyzer"
        MinWidth="950" MinHeight="650"
        Background="#212224"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Resources>
        <conv:StringToDateTimeOffsetConverter x:Key="StringToDateTimeOffsetConverter" />
        <conv:EqualityToVisibilityConverter x:Key="IsEqualToVisibleConverter" />
        <conv:InverseEqualityToVisibilityConverter x:Key="NotEqualToVisibleConverter" />
        <views:BindingProxy x:Key="MainWindowViewModelProxy" Data="{Binding}" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.icon-button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#f0f0f0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.2" />
                    <BrushTransition Property="Background" Duration="0.2" />
                    <BrushTransition Property="Foreground" Duration="0.2" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#3D3E42" />
                <Setter Property="Foreground" Value="#ffffff" />
                <Setter Property="RenderTransform" Value="scale(1.05)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.95)" />
            </Style>
        </Style>
        
        <Style Selector="DataGrid">
            <Setter Property="Margin" Value="8" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="CanUserResizeColumns" Value="True" />
            <Setter Property="CanUserSortColumns" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="HorizontalGridLinesBrush" Value="#3D3E42" />
            <Setter Property="Opacity" Value="0" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0.8" Easing="CircularEaseOut" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.5" Easing="CircularEaseOut" />
                </Transitions>
            </Setter>
            <Setter Property="RenderTransform" Value="translateY(20px)" />
        </Style>
        
        <Style Selector="DataGrid.visible">
            <Setter Property="Opacity" Value="1" />
            <Setter Property="RenderTransform" Value="none" />
        </Style>
        
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
            <Style Selector="^:nth-child(odd)">
                <Setter Property="Background" Value="#262729" />
            </Style>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#3D3E42" />
                <Setter Property="RenderTransform" Value="translateX(4px)" />
            </Style>
            <Style Selector="^:selected">
                <Setter Property="Background" Value="#4A4C53" />
            </Style>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#212224" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10" />
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BoxShadow" Value="0 2 10 0 #15000000" />
            <Setter Property="Margin" Value="8" />
        </Style>
        
        <Style Selector="TabControl">
            <Setter Property="Padding" Value="8" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#AAAAAA" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0 0 4 0" />
            <Setter Property="CornerRadius" Value="4" />
            <Style Selector="^:selected">
                <Setter Property="Foreground" Value="#FFFFFF" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#404146" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12 8" />
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="#4e72c8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#404146" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0 0 4 0" />
        </Style>
        
        <Style Selector="Button.remove-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8 0 0 0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.remove-button:pointerover">
            <Setter Property="Background" Value="#4E3636" />
            <Setter Property="Foreground" Value="#F15B5B" />
        </Style>
        
        <Style Selector="Button.add-button">
            <Setter Property="Background" Value="#357538" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 6" />
            <Setter Property="Margin" Value="0 12 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.add-button:pointerover">
            <Setter Property="Background" Value="#4CAF50" />
        </Style>
        
        <Style Selector="Button.apply-filters-button">
            <Setter Property="Background" Value="#4e72c8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="Margin" Value="0 12 0 0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-filters-button:pointerover">
            <Setter Property="Background" Value="#5a80d3" />
        </Style>
    </Window.Styles>

    <Panel>
        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Padding="16" 
                    Background="#262729"
                    Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Button Classes="icon-button" 
                                ToolTip.Tip="Load file"
                                Command="{Binding MainView.LoadFileCommand}">
                            <TextBlock Text="📁" FontSize="18" />
                        </Button>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding MainView.FileStatus}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="#CCCCCC"
                               FontSize="14" />
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Margin="16,8,16,16" Padding="16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Margin="4" Padding="16,12" Background="#382626" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔴" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="ERRORS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.ErrorCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#F15B5B" />
                            <TextBlock Text="{Binding MainView.ErrorPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="4" Padding="16,12" Background="#3A3320" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟠" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="WARNINGS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.WarningCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#F9A825" />
                            <TextBlock Text="{Binding MainView.WarningPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Margin="4" Padding="16,12" Background="#263238" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔵" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="INFORMATION" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.InfoCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#64B5F6" />
                            <TextBlock Text="{Binding MainView.InfoPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Margin="4" Padding="16,12" Background="#2A2A2A" CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚪" FontSize="20" VerticalAlignment="Center" />
                                <TextBlock Text="OTHERS" Margin="8,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.OtherCount}" FontSize="24" FontWeight="Bold" Margin="0,8,0,0" Foreground="#BBBBBB" />
                            <TextBlock Text="{Binding MainView.OtherPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <Border Grid.Row="2" Margin="16,0,16,16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TabControl Grid.Column="0" SelectedIndex="{Binding MainView.SelectedTabIndex}">
                        <TabItem Header="All entries">
                            <DataGrid ItemsSource="{Binding MainView.LogEntries}"
                                    Classes="visible"
                                    CanUserReorderColumns="True"
                                    IsReadOnly="True"
                                    Margin="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150" />
                                    <DataGridTemplateColumn Header="Level" Width="130">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                    <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                    <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="120" />
                                    <DataGridTemplateColumn Header="Message" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <Button Background="Transparent" BorderThickness="0" Padding="2,1" Command="{Binding OpenFileCommand}" CommandParameter="{Binding}">
                                                    <TextBlock Text="{Binding DisplayMessage}" TextWrapping="Wrap" FontWeight="Normal" FontSize="13"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Рекомендации" Width="350">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" IsVisible="{Binding HasRecommendations}">
                                                    <StackPanel Margin="6">
                                                        <TextBlock Text="{Binding ErrorDescription}" 
                                                                 TextWrapping="Wrap"
                                                                 FontSize="12" 
                                                                 Foreground="#CCCCCC"
                                                                 Margin="0,0,0,8"/>
                                                        <ItemsControl ItemsSource="{Binding ErrorRecommendations}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                                                        <TextBlock Text="•" 
                                                                                 Foreground="#64B5F6" 
                                                                                 FontWeight="Bold" 
                                                                                 Margin="0,0,8,0"
                                                                                 VerticalAlignment="Top"/>
                                                                        <TextBlock Text="{Binding}"
                                                                                 TextWrapping="Wrap"
                                                                                 FontSize="12"
                                                                                 LineHeight="18"
                                                                                 Foreground="#E0E0E0"
                                                                                 MaxWidth="300"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Query results">
                            <DataGrid ItemsSource="{Binding MainView.FilteredLogEntries}"
                                    Classes="visible"
                                    CanUserReorderColumns="True"
                                    IsReadOnly="True"
                                    Margin="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=\{0:yyyy-MM-dd HH:mm:ss\}}" Width="150" />
                                    <DataGridTemplateColumn Header="Level" Width="130">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                    <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                    <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="120" />
                                    <DataGridTemplateColumn Header="Message" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <Button Background="Transparent" BorderThickness="0" Padding="2,1" Command="{Binding OpenFileCommand}" CommandParameter="{Binding}">
                                                    <TextBlock Text="{Binding DisplayMessage}" TextWrapping="Wrap" FontWeight="Normal" FontSize="13"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Рекомендации" Width="350">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models:LogEntry">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" IsVisible="{Binding HasRecommendations}">
                                                    <StackPanel Margin="6">
                                                        <TextBlock Text="{Binding ErrorDescription}" 
                                                                 TextWrapping="Wrap"
                                                                 FontSize="12" 
                                                                 Foreground="#CCCCCC"
                                                                 Margin="0,0,0,8"/>
                                                        <ItemsControl ItemsSource="{Binding ErrorRecommendations}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                                                        <TextBlock Text="•" 
                                                                                 Foreground="#64B5F6" 
                                                                                 FontWeight="Bold" 
                                                                                 Margin="0,0,8,0"
                                                                                 VerticalAlignment="Top"/>
                                                                        <TextBlock Text="{Binding}"
                                                                                 TextWrapping="Wrap"
                                                                                 FontSize="12"
                                                                                 LineHeight="18"
                                                                                 Foreground="#E0E0E0"
                                                                                 MaxWidth="300"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                                    <TextBlock Text="Errors only" FontWeight="SemiBold" FontSize="14" />
                                    <Button Content="+ Add Filter" Classes="add-button" Command="{Binding AddFilterCriterionCommand}" Padding="10,4" FontSize="12" MinWidth="0" MinHeight="0" Margin="8,0,0,0" />
                                </StackPanel>
                            </TabItem.Header>
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding FilterCriteria}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" Spacing="6" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="models:FilterCriterion">
                                            <Border Background="#2D2E32" CornerRadius="6" Padding="12 8">
                                                <Grid ColumnDefinitions="Auto,Auto,*,Auto" VerticalAlignment="Center">
                                                    <ComboBox Grid.Column="0"
                                                              ItemsSource="{Binding ParentViewModel.AvailableFields}"
                                                              SelectedItem="{Binding SelectedField}"
                                                              MinWidth="150"
                                                              Margin="0,0,5,0"/>
                                                    <ComboBox Grid.Column="1"
                                                              ItemsSource="{Binding AvailableOperators}"
                                                              SelectedItem="{Binding SelectedOperator}"
                                                              MinWidth="100"
                                                              Margin="0,0,5,0"/>
                                                    <TextBox Grid.Column="2"
                                                             Text="{Binding Value}"
                                                             Watermark="Value"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,5,0"/>
                                                    <Button Grid.Column="3"
                                                            Content="Remove"
                                                            Command="{Binding ParentViewModel.RemoveFilterCriterionCommand}"
                                                            CommandParameter="{Binding}"
                                                            Classes="danger"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button Content="✔️ Apply Filters" Classes="apply-filters-button" Command="{Binding ApplyFiltersCommand}" HorizontalAlignment="Left" Margin="0,8,0,0" />
                                <DataGrid ItemsSource="{Binding MainView.ErrorLogEntries}"
                                        Classes="visible"
                                        CanUserReorderColumns="True"
                                        IsReadOnly="True"
                                        Margin="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="150" />
                                        <DataGridTemplateColumn Header="Level" Width="130">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate x:DataType="models:LogEntry">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                                                        <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                        <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="120" />
                                        <DataGridTemplateColumn Header="Message" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate x:DataType="models:LogEntry">
                                                    <Button Background="Transparent" BorderThickness="0" Padding="2,1" Command="{Binding OpenFileCommand}" CommandParameter="{Binding}">
                                                        <TextBlock Text="{Binding DisplayMessage}" TextWrapping="Wrap" FontWeight="Normal" FontSize="13"/>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Рекомендации" Width="350">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate x:DataType="models:LogEntry">
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200" IsVisible="{Binding HasRecommendations}">
                                                        <StackPanel Margin="6">
                                                            <TextBlock Text="{Binding ErrorDescription}" 
                                                                     TextWrapping="Wrap"
                                                                     FontSize="12" 
                                                                     Foreground="#CCCCCC"
                                                                     Margin="0,0,0,8"/>
                                                            <ItemsControl ItemsSource="{Binding ErrorRecommendations}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal" Margin="0,3">
                                                                            <TextBlock Text="•" 
                                                                                     Foreground="#64B5F6" 
                                                                                     FontWeight="Bold" 
                                                                                     Margin="0,0,8,0"
                                                                                     VerticalAlignment="Top"/>
                                                                            <TextBlock Text="{Binding}"
                                                                                     TextWrapping="Wrap"
                                                                                     FontSize="12"
                                                                                     LineHeight="18"
                                                                                     Foreground="#E0E0E0"
                                                                                     MaxWidth="300"/>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </ScrollViewer>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
            
            <Panel Grid.Row="2" IsVisible="{Binding MainView.IsLoading}">
                <Border Background="#55262729" 
                        Opacity="0.9" 
                        CornerRadius="8">
                    <StackPanel Spacing="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                   Width="220" />
                        <TextBlock Text="{Binding MainView.StatusMessage}"
                                   HorizontalAlignment="Center" 
                                   Foreground="#FFFFFF"
                                   FontSize="14" />
                    </StackPanel>
                </Border>
            </Panel>
            
            <Border Grid.Row="3" 
                    Padding="16,12"
                    Background="#262729">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding MainView.StatusMessage}" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Foreground="#CCCCCC"
                              FontSize="14" />
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding MainView.LogEntries.Count, StringFormat=Total entries: {0}}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Foreground="#AAAAAA"
                               Margin="16,0,0,0"
                               FontSize="13" />
                    
                    <TextBlock Grid.Column="1" 
                               Text="{Binding AppVersion}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Foreground="#777777"
                               Margin="16,0,16,0"
                               FontSize="12" />
                </Grid>
            </Border>
        </Grid>
    </Panel>
</Window>
