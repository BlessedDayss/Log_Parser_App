<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Log_Parser_App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Log_Parser_App.Converters"
        xmlns:models1="clr-namespace:Log_Parser_App.Models"
        xmlns:analytics="clr-namespace:Log_Parser_App.Models.Analytics"
        xmlns:views="clr-namespace:Log_Parser_App.Views"
        xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:lvccore="using:LiveChartsCore"
        xmlns:lvcskt="using:LiveChartsCore.SkiaSharpView"
        xmlns:lvcskia="using:LiveChartsCore.SkiaSharpView.Painting"
        xmlns:conv="clr-namespace:Log_Parser_App.Converters"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="Log_Parser_App.Views.MainWindow"
        x:Name="mainWindowInstance"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logparserv1.ico"
        Title="LogParser - Log Analyzer"
        MinWidth="950" MinHeight="650"
        Background="#1A1C21"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Resources>
        <converters:BoolToTabColorConverter x:Key="BoolToTabColorConverter" />
        <converters:TabToVisibilityConverter x:Key="TabToVisibilityConv" />
        <conv:StringShortenerConverter x:Key="StringShortenerConverter" />
        <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter" />
        <converters:StringToUpperConverter x:Key="StringToUpperConverter" />
        
        <!-- Color/Brush Resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1C21" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#22252D" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4E72C8" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#5D6B8E" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C80BC" />
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5F7" />
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12" />
        <SolidColorBrush x:Key="InfoBrush" Color="#3498DB" />
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.icon-button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.2" />
                    <BrushTransition Property="Background" Duration="0.2" />
                    <BrushTransition Property="Foreground" Duration="0.2" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="#ffffff" />
                <Setter Property="RenderTransform" Value="scale(1.05)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.95)" />
            </Style>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Padding" Value="8" />
            <Style Selector="^:nth-child(odd)">
                <Setter Property="Background" Value="#262729" />
            </Style>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#3D3E42" />
            </Style>
            <Style Selector="^:selected">
                <Setter Property="Background" Value="#4A4C53" />
            </Style>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#22252D" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BoxShadow" Value="0 4 16 0 #15000000" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0.2" />
                    <ThicknessTransition Property="Margin" Duration="0.2" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 6 20 0 #20000000" />
            <Setter Property="Margin" Value="8 6 12 14" />
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 10" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#5A80D3" />
                <Setter Property="RenderTransform" Value="scale(1.02)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.98)" />
            </Style>
        </Style>
        
        <Style Selector="Button.remove-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8 0 0 0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.remove-button:pointerover">
            <Setter Property="Background" Value="#4E3636" />
            <Setter Property="Foreground" Value="#F15B5B" />
        </Style>
        
        <Style Selector="Button.add-button">
            <Setter Property="Background" Value="#357538" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.add-button:pointerover">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        
        <Style Selector="Button.apply-filters-button">
            <Setter Property="Background" Value="#4e72c8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-filters-button:pointerover">
            <Setter Property="Background" Value="#5a80d3" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        
        <Style Selector="Button.reset-filters-button">
            <Setter Property="Background" Value="#7c8694" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.reset-filters-button:pointerover">
            <Setter Property="Background" Value="#8d98a6" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>


        
        <Style Selector="Button.apply-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-button:pointerover">
            <Setter Property="Background" Value="#36544E" />
            <Setter Property="Foreground" Value="#5BF15B" />
        </Style>
        
        <Style Selector="Button.icon-button-small">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.icon-button-small:pointerover">
            <Setter Property="Background" Value="#444444" />
        </Style>

        <!-- Consistent small circular icon button for list rows -->
        <Style Selector="Button.list-icon">
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <!-- Override global Button transitions to avoid extra 150ms fade adding to 1s delay -->
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.list-icon:pointerover">
            <Setter Property="Background" Value="#3A3B40" />
        </Style>
        <Style Selector="Button.list-icon:pressed">
            <Setter Property="Background" Value="#4A4C53" />
        </Style>
    </Window.Styles>

    <Panel>
        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Padding="16 8" 
                    Background="#262729"
                    Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Button Classes="icon-button" 
                                ToolTip.Tip="File options"
                                Command="{Binding MainView.ShowFilePickerContextMenuCommand}">
                            <TextBlock Text="📁" FontSize="18" />
                        </Button>

                        <Button Classes="icon-button" 
                                ToolTip.Tip="IIS Logs Analysis"
                                Command="{Binding MainView.LoadIISLogsCommand}">
                            <TextBlock Text="🖥️" FontSize="18" />
                        </Button>
                        <Button Classes="icon-button" 
                                ToolTip.Tip="RabbitMQ Logs Analysis"
                                Command="{Binding MainView.LoadRabbitMqLogsCommand}">
                            <TextBlock Text="🐰" FontSize="18" />
                        </Button>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding MainView.FileTabs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Background="{Binding IsSelected, Converter={StaticResource BoolToTabColorConverter}}"
                                                Padding="10 5" 
                                                Margin="0 0 2 0" 
                                                CornerRadius="4 4 0 0"
                                                BorderThickness="0"
                                                Click="SelectTab"
                                                DoubleTapped="Tab_DoubleTapped"
                                                CommandParameter="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Title}" 
                                                           VerticalAlignment="Center"
                                                           Margin="0 0 10 0"/>
                                                <Button Grid.Column="1"
                                                        Classes="icon-button-small"
                                                        Click="CloseTab"
                                                        CommandParameter="{Binding}">
                                                    <TextBlock Text="✕" FontSize="10"/>
                                                </Button>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Spacing="8">
                        <!-- Export CSV Button for IIS only -->
                        <Button Content="📊 Export CSV" 
                                Classes="apply-filters-button" 
                                Command="{Binding MainView.SelectedTab.ExportIisLogsToCsvCommand}"
                                IsVisible="{Binding MainView.SelectedTab.IsThisTabIIS}"
                                Padding="12,6" 
                                FontSize="12" 
                                MinHeight="32" 
                                MinWidth="120"
                                ToolTip.Tip="Export filtered IIS logs to CSV file"/>
                        
                        <TextBlock Text="{Binding MainView.FileStatus}" 
                                   VerticalAlignment="Center" 
                                   Margin="10 0 0 0"
                                   Foreground="#CCCCCC"
                                   FontSize="14" />
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Margin="16,8,16,16" Padding="16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Auto-Update Block -->
                    <Border Grid.Column="0" Background="#1a3d1a" CornerRadius="8" Padding="8,4" Margin="2" 
                            IsVisible="{Binding IsUpdateAvailable}">
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                                <TextBlock Text="🔄" FontSize="14" VerticalAlignment="Center" />
                                <TextBlock Text="Auto-Update" 
                                       FontWeight="Bold" 
                                           FontSize="12"
                                       Foreground="White" 
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="{Binding AvailableUpdate.Version, StringFormat='v{0} available'}" 
                                       Foreground="#90EE90" 
                                       FontSize="11"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Installing automatically..." 
                                       Foreground="#AAAAAA" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       IsVisible="{Binding IsDownloadingUpdate}" />          
                            <ProgressBar Value="{Binding DownloadProgress}" 
                                         Maximum="100"
                                         Height="4"
                                         Background="#333333"
                                         Foreground="#4CAF50"
                                         IsVisible="{Binding IsDownloadingUpdate}" />
                            <Button Content="Manual Install" 
                                    Command="{Binding DownloadAndUpdateCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="8,3"
                                    FontSize="10"
                                    HorizontalAlignment="Stretch"
                                    IsVisible="{Binding !IsDownloadingUpdate}" />
                        </StackPanel>
                    </Border>

                    <!-- Standard Dashboard Panels (for Standard logs only) -->
                    <Border Grid.Column="0" Margin="2" Padding="8,4" Background="#382636" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabStandard}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🆔" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="PROCESS UID" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.UniqueProcessUIDCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#64F5A6" />
                            <TextBlock Text="unique processes" FontSize="12" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="2" Padding="8,4" Background="#3A2626" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabStandard}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔴" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="MESSAGE ERRORS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.ErrorCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F15B5B" />
                            <TextBlock Text="{Binding MainView.TotalCount, StringFormat='/ {0} total'}" FontSize="12" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Margin="2" Padding="8,4" Background="#3A3320" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabStandard}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟠" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="WARNINGS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.WarningCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F9A825" />
                            <TextBlock Text="{Binding MainView.WarningPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Margin="2" Padding="8,4" Background="#263238" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabStandard}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔵" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="INFORMATION" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.InfoCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#64B5F6" />
                            <TextBlock Text="{Binding MainView.InfoPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>

                    <!-- RabbitMQ Analytics Dashboard Panels (RDB-003) -->
                    <Border Grid.Column="0" Margin="2" Padding="8,4" Background="#263238" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabRabbitMQ}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="ACTIVE CONSUMERS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.RabbitMQDashboard.ActiveConsumersCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#64F5A6" />
                            <ItemsControl ItemsSource="{Binding MainView.RabbitMQDashboard.ActiveConsumers}" MaxHeight="40">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="analytics:ConsumerStatusInfo">
                                        <TextBlock Text="{Binding DisplayText}" FontSize="10" Margin="0,1" Foreground="{Binding UIColor}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ProgressBar IsVisible="{Binding MainView.RabbitMQDashboard.IsLoadingActiveConsumers}" 
                                         Height="3" Background="#444" Foreground="#64F5A6" IsIndeterminate="True"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="2" Padding="8,4" Background="#382626" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabRabbitMQ}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚨" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="CRITICAL ERRORS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.RabbitMQDashboard.CriticalErrorsCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F15B5B" />
                            <ItemsControl ItemsSource="{Binding MainView.RabbitMQDashboard.RecentCriticalErrors}" MaxHeight="40">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="analytics:CriticalErrorInfo">
                                        <TextBlock Text="{Binding DisplayText}" FontSize="10" Margin="0,1" Foreground="#F15B5B"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ProgressBar IsVisible="{Binding MainView.RabbitMQDashboard.IsLoadingCriticalErrors}" 
                                         Height="3" Background="#444" Foreground="#F15B5B" IsIndeterminate="True"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Margin="2" Padding="8,4" Background="#3A3320" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabRabbitMQ}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="ACCOUNT ACTIVITY" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.RabbitMQDashboard.HighRiskAccountsCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F9A825" />
                            <ItemsControl ItemsSource="{Binding MainView.RabbitMQDashboard.AccountActivities}" MaxHeight="40">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="analytics:AccountActivityInfo">
                                        <TextBlock Text="{Binding DisplayText}" FontSize="10" Margin="0,1" Foreground="{Binding UIColor}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ProgressBar IsVisible="{Binding MainView.RabbitMQDashboard.IsLoadingAccountActivity}" 
                                         Height="3" Background="#444" Foreground="#F9A825" IsIndeterminate="True"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Margin="2" Padding="8,4" Background="#2A3A2A" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabRabbitMQ}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="INSIGHTS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.RabbitMQDashboard.AnomaliesCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#4CAF50" />
