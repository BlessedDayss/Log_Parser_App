                    <!-- IIS Dashboard Panels -->
                    <Border Grid.Column="0" Margin="2" Padding="8,4" Background="#382626" CornerRadius="6"
                            IsVisible="{Binding MainView.SelectedTab.IsThisTabIIS}">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔢" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="STATUS CODES" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <ItemsControl ItemsSource="{Binding MainView.Statistics.TopStatusCodes}" MaxHeight="60">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models1:IISStatusAnalysis">
                                        <TextBlock FontSize="12" Margin="0,1" Foreground="#F15B5B">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} ({1})">
                                                    <Binding Path="StatusCode"/>
                                                    <Binding Path="Count"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ProgressBar IsVisible="{Binding MainView.Statistics.IsProcessingAnalytics}" 
