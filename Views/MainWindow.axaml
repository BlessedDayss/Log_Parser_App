<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Log_Parser_App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Log_Parser_App.Converters"
        xmlns:models1="clr-namespace:Log_Parser_App.Models"
        xmlns:views="clr-namespace:Log_Parser_App.Views"
        xmlns:dataGrid="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:lvccore="using:LiveChartsCore"
        xmlns:lvcskt="using:LiveChartsCore.SkiaSharpView"
        xmlns:lvcskia="using:LiveChartsCore.SkiaSharpView.Painting"
        xmlns:conv="clr-namespace:Log_Parser_App.Converters"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="750"
        x:Class="Log_Parser_App.Views.MainWindow"
        x:Name="mainWindowInstance"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logparserv1.ico"
        Title="LogParser - Log Analyzer"
        MinWidth="950" MinHeight="650"
        Background="#1A1C21"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Resources>
        <converters:BoolToTabColorConverter x:Key="BoolToTabColorConverter" />
        <converters:TabToVisibilityConverter x:Key="TabToVisibilityConv" />
        <conv:StringShortenerConverter x:Key="StringShortenerConverter" />
        <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter" />
        <converters:StringToUpperConverter x:Key="StringToUpperConverter" />
        
        <!-- Color/Brush Resources -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1C21" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="#22252D" />
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4E72C8" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#5D6B8E" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5C80BC" />
        <SolidColorBrush x:Key="TextBrush" Color="#F5F5F7" />
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12" />
        <SolidColorBrush x:Key="InfoBrush" Color="#3498DB" />
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ECC71" />
    </Window.Resources>

    <Window.Styles>
        <Style Selector="Button.icon-button">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.2" />
                    <BrushTransition Property="Background" Duration="0.2" />
                    <BrushTransition Property="Foreground" Duration="0.2" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                <Setter Property="Foreground" Value="#ffffff" />
                <Setter Property="RenderTransform" Value="scale(1.05)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.95)" />
            </Style>
        </Style>
        
        <Style Selector="ListBox">
            <Setter Property="Margin" Value="8" />
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="#2D2E32" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Padding" Value="8" />
            <Style Selector="^:nth-child(odd)">
                <Setter Property="Background" Value="#262729" />
            </Style>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#3D3E42" />
            </Style>
            <Style Selector="^:selected">
                <Setter Property="Background" Value="#4A4C53" />
            </Style>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#22252D" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BoxShadow" Value="0 4 16 0 #15000000" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0.2" />
                    <ThicknessTransition Property="Margin" Duration="0.2" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 6 20 0 #20000000" />
            <Setter Property="Margin" Value="8 6 12 14" />
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="16 10" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15" />
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
            <Style Selector="^:pointerover">
                <Setter Property="Background" Value="#5A80D3" />
                <Setter Property="RenderTransform" Value="scale(1.02)" />
            </Style>
            <Style Selector="^:pressed">
                <Setter Property="RenderTransform" Value="scale(0.98)" />
            </Style>
        </Style>
        
        <Style Selector="Button.remove-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="8 0 0 0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.remove-button:pointerover">
            <Setter Property="Background" Value="#4E3636" />
            <Setter Property="Foreground" Value="#F15B5B" />
        </Style>
        
        <Style Selector="Button.add-button">
            <Setter Property="Background" Value="#357538" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.add-button:pointerover">
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        
        <Style Selector="Button.apply-filters-button">
            <Setter Property="Background" Value="#4e72c8" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-filters-button:pointerover">
            <Setter Property="Background" Value="#5a80d3" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        
        <Style Selector="Button.reset-filters-button">
            <Setter Property="Background" Value="#7c8694" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="12 8" />
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0.15" />
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.reset-filters-button:pointerover">
            <Setter Property="Background" Value="#8d98a6" />
            <Setter Property="RenderTransform" Value="scale(1.02)" />
        </Style>
        
        <Style Selector="Button.apply-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#A0A0A0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="28" />
            <Setter Property="Height" Value="28" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                    <BrushTransition Property="Foreground" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.apply-button:pointerover">
            <Setter Property="Background" Value="#36544E" />
            <Setter Property="Foreground" Value="#5BF15B" />
        </Style>
        
        <Style Selector="Button.icon-button-small">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.icon-button-small:pointerover">
            <Setter Property="Background" Value="#444444" />
        </Style>
    </Window.Styles>

    <Panel>
        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" 
                    Padding="16 8" 
                    Background="#262729"
                    Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <Button Classes="icon-button" 
                                ToolTip.Tip="File options"
                                Command="{Binding MainView.ShowFilePickerContextMenuCommand}">
                            <TextBlock Text="📁" FontSize="18" />
                        </Button>
                        <Button Classes="icon-button" 
                                ToolTip.Tip="Dashboard"
                                Command="{Binding MainView.ToggleDashboardVisibilityCommand}">
                            <TextBlock Text="📊" FontSize="18" />
                        </Button>
                        <Button Classes="icon-button" 
                                ToolTip.Tip="IIS Logs Analysis"
                                Command="{Binding MainView.LoadIISLogsCommand}">
                            <TextBlock Text="🖥️" FontSize="18" />
                        </Button>
                        <Button Classes="icon-button" 
                                ToolTip.Tip="RabbitMQ Logs Analysis"
                                Command="{Binding MainView.LoadRabbitMqLogsCommand}">
                            <TextBlock Text="🐰" FontSize="18" />
                        </Button>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                     VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding MainView.FileTabs}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Background="{Binding IsSelected, Converter={StaticResource BoolToTabColorConverter}}"
                                                Padding="10 5" 
                                                Margin="0 0 2 0" 
                                                CornerRadius="4 4 0 0"
                                                BorderThickness="0"
                                                Click="SelectTab"
                                                DoubleTapped="Tab_DoubleTapped"
                                                CommandParameter="{Binding}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Title}" 
                                                           VerticalAlignment="Center"
                                                           Margin="0 0 10 0"/>
                                                <Button Grid.Column="1"
                                                        Classes="icon-button-small"
                                                        Click="CloseTab"
                                                        CommandParameter="{Binding}">
                                                    <TextBlock Text="✕" FontSize="10"/>
                                                </Button>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                    
                    <TextBlock Grid.Column="2" 
                               Text="{Binding MainView.FileStatus}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="10 0 0 0"
                               Foreground="#CCCCCC"
                               FontSize="14" />
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Margin="16,8,16,16" Padding="16" Background="#262729" CornerRadius="8" IsVisible="{Binding !MainView.IsDashboardVisible}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Auto-Update Block -->
                    <Border Grid.Column="0" Background="#1a3d1a" CornerRadius="8" Padding="8,4" Margin="2" 
                            IsVisible="{Binding IsUpdateAvailable}">
                        <StackPanel Spacing="6">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                                <TextBlock Text="🔄" FontSize="14" VerticalAlignment="Center" />
                                <TextBlock Text="Auto-Update" 
                                       FontWeight="Bold" 
                                           FontSize="12"
                                       Foreground="White" 
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <TextBlock Text="{Binding AvailableUpdate.Version, StringFormat='v{0} available'}" 
                                       Foreground="#90EE90" 
                                       FontSize="11"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Installing automatically..." 
                                       Foreground="#AAAAAA" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       IsVisible="{Binding IsDownloadingUpdate}" />          
                            <ProgressBar Value="{Binding DownloadProgress}" 
                                         Maximum="100"
                                         Height="4"
                                         Background="#333333"
                                         Foreground="#4CAF50"
                                         IsVisible="{Binding IsDownloadingUpdate}" />
                            <Button Content="Manual Install" 
                                    Command="{Binding DownloadAndUpdateCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="8,3"
                                    FontSize="10"
                                    HorizontalAlignment="Stretch"
                                    IsVisible="{Binding !IsDownloadingUpdate}" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="0" Margin="2" Padding="8,4" Background="#382626" CornerRadius="6">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔴" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="ERRORS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.ErrorCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F15B5B" />
                            <TextBlock Text="{Binding MainView.ErrorPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Margin="2" Padding="8,4" Background="#3A3320" CornerRadius="6">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟠" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="WARNINGS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.WarningCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#F9A825" />
                            <TextBlock Text="{Binding MainView.WarningPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Margin="2" Padding="8,4" Background="#263238" CornerRadius="6">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔵" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="INFORMATION" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.InfoCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#64B5F6" />
                            <TextBlock Text="{Binding MainView.InfoPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="3" Margin="2" Padding="8,4" Background="#2A2A2A" CornerRadius="6">
                        <StackPanel Spacing="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚪" FontSize="12" VerticalAlignment="Center" />
                                <TextBlock Text="OTHERS" Margin="2,0,0,0" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Foreground="#DDDDDD" />
                            </StackPanel>
                            <TextBlock Text="{Binding MainView.OtherCount}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0" Foreground="#BBBBBB" />
                            <TextBlock Text="{Binding MainView.OtherPercent, StringFormat={}{0:F1}%}" FontSize="14" Opacity="0.7" Foreground="#DDDDDD" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <Border Grid.Row="2" Margin="16,0,16,16" Background="#262729" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TabControl Grid.Column="0" SelectedIndex="{Binding MainView.SelectedTabIndex}">
                        <TabItem Header="All entries">
                            <Grid RowDefinitions="Auto, Auto, *"> 
                                <!-- Region for Standard Log Filters -->
                                <StackPanel IsVisible="{Binding MainView.SelectedTab.IsThisTabStandardOrRabbitMQ}" Grid.Row="0" Grid.RowSpan="2"> 
                                    <!-- Row 0 for Filter Buttons -->
                                    <Grid VerticalAlignment="Center" Margin="8,8,8,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="+ Add Filter" Classes="add-button" Click="OnAddFilterClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                        <Button Grid.Column="1" Content="Apply Filters" Classes="apply-filters-button" Click="OnApplyFiltersClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                        <Button Grid.Column="2" Content="Reset Filters" Classes="reset-filters-button" Click="OnResetFiltersClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                    </Grid>
                                    <!-- Row 1 for Filter Criteria ItemsControl -->
                                    <ItemsControl ItemsSource="{Binding MainView.SelectedTab.FilterCriteria}" Margin="8,0,8,8">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" Spacing="6" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="models1:FilterCriterion">
                                                <Border Background="#2D2E32" CornerRadius="6" Padding="12 8">
                                                    <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" VerticalAlignment="Center">
                                                        <ComboBox Grid.Column="0"
                                                                  ItemsSource="{Binding AvailableFields}"
                                                                  SelectedItem="{Binding SelectedField}"
                                                                  MinWidth="150"
                                                                  Margin="0,0,5,0"/>
                                                        <ComboBox Grid.Column="1"
                                                                  ItemsSource="{Binding AvailableOperators}"
                                                                  SelectedItem="{Binding SelectedOperator}"
                                                                  MinWidth="100"
                                                                  Margin="0,0,5,0"/>
                                                        <Panel Grid.Column="2" Margin="0,0,5,0">
                                                            <ComboBox IsVisible="{Binding ShowValueComboBox}"
                                                                      ItemsSource="{Binding AvailableValues}"
                                                                      SelectedItem="{Binding Value}"
                                                                      PlaceholderText="Select a value"
                                                                      MinWidth="150"/>
                                                            <TextBox IsVisible="{Binding !ShowValueComboBox}"
                                                                     Text="{Binding Value}"
                                                                     Watermark="Value"
                                                                     MinWidth="150"/>
                                                        </Panel>
                                                        <Button Grid.Column="3" 
                                                                Classes="remove-button" 
                                                                Command="{Binding ParentViewModel.RemoveFilterCriterionCommand}" 
                                                                CommandParameter="{Binding}"
                                                                Padding="0" Margin="5,0,0,0">
                                                            <TextBlock Text="🗑️" FontSize="14"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel> 

                                <!-- Region for IIS Log Filters -->
                                <StackPanel IsVisible="{Binding MainView.SelectedTab.IsThisTabIIS}" Grid.Row="0" Grid.RowSpan="2"> 
                                    <!-- Row 0 for IIS Filter Buttons -->
                                    <Grid VerticalAlignment="Center" Margin="8,8,8,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="+ Add IIS Filter" Classes="add-button" Click="OnAddIISFilterClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                        <Button Grid.Column="1" Content="Apply IIS Filters" Classes="apply-filters-button" Click="OnApplyIISFiltersClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                        <Button Grid.Column="2" Content="Reset IIS Filters" Classes="reset-filters-button" Click="OnResetIISFiltersClick" 
                                                Padding="10,5" FontSize="12" MinHeight="32" Margin="2,0,2,0" HorizontalAlignment="Stretch" />
                                    </Grid>
                                    <!-- Row 1 for IIS Filter Criteria ItemsControl -->
                                    <ItemsControl ItemsSource="{Binding MainView.SelectedTab.IISFilterCriteria}" Margin="8,0,8,8">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" Spacing="6" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="models1:IISFilterCriterion">
                                                <Border Background="#2D2E32" CornerRadius="6" Padding="12 8">
                                                    <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto" VerticalAlignment="Center">
                                                        <ComboBox Grid.Column="0"
                                                                  ItemsSource="{Binding AvailableFields}" 
                                                                  SelectedItem="{Binding SelectedField}"
                                                                  MinWidth="150"
                                                                  Margin="0,0,5,0"/>
                                                        <ComboBox Grid.Column="1"
                                                                  ItemsSource="{Binding AvailableOperators}"
                                                                  SelectedItem="{Binding SelectedOperator}"
                                                                  MinWidth="100"
                                                                  Margin="0,0,5,0"/>
                                                        <Panel Grid.Column="2" Margin="0,0,5,0">
                                                            <ComboBox IsVisible="{Binding ShowValueComboBox}"
                                                                      ItemsSource="{Binding AvailableValues}"
                                                                      SelectedItem="{Binding Value}"
                                                                      PlaceholderText="Select a value"
                                                                      MinWidth="150"/>
                                                            <TextBox IsVisible="{Binding !ShowValueComboBox}"
                                                                     Text="{Binding Value}"
                                                                     Watermark="Value"
                                                                     MinWidth="150"/>
                                                        </Panel>
                                                        <Button Grid.Column="3" 
                                                                Classes="remove-button" 
                                                                Command="{Binding ParentViewModel.RemoveIISFilterCriterionCommand}" 
                                                                CommandParameter="{Binding}"
                                                                Padding="0" Margin="5,0,0,0">
                                                            <TextBlock Text="🗑️" FontSize="14"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Row 2 for DataGrid -->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <Grid DataContext="{Binding MainView}">
                                        <!-- Standard LogEntry Custom Table -->
                                        <Grid IsVisible="{Binding SelectedTab.IsThisTabStandardOrRabbitMQ}" Background="#222326" Grid.IsSharedSizeScope="True">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Column Headers -->
                                            <Grid Grid.Row="0" Background="#2D2F33">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" MinWidth="180" SharedSizeGroup="TimestampCol"/>
                                                    <ColumnDefinition Width="Auto" MinWidth="100" SharedSizeGroup="LevelCol"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto" MinWidth="150" SharedSizeGroup="SourceCol"/>
                                                    <ColumnDefinition Width="Auto" MinWidth="150" SharedSizeGroup="RecommendationCol"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="Timestamp" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="Level" Padding="8,8" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="Message" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="3" Text="Source" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="4" Text="Recommendation" Padding="8,8" FontWeight="SemiBold"/>
                                            </Grid>
                                            
                                            <!-- Table Content -->
                                            <ListBox Grid.Row="1" 
                                                     ItemsSource="{Binding SelectedTab.FilteredLogEntries}"
                                                     SelectedItem="{Binding SelectedLogEntry}"
                                                     Background="Transparent"
                                                     BorderThickness="0">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="models1:LogEntry">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="TimestampCol"/>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="LevelCol"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="SourceCol"/>
                                                                <ColumnDefinition Width="Auto" SharedSizeGroup="RecommendationCol"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Padding="8,4"/>
                                                            <Border Grid.Column="1" Background="{Binding Level, Converter={StaticResource LogLevelToBrushConverter}}" 
                                                                    CornerRadius="3" 
                                                                    Padding="5,2" 
                                                                    HorizontalAlignment="Center" 
                                                                    MinWidth="60">
                                                                <TextBlock Text="{Binding Level}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                            </Border>
                                                            <TextBlock Grid.Column="2" Text="{Binding Message}" Padding="8,4" TextWrapping="Wrap"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding Source}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="4" Text="{Binding Recommendation}" Padding="8,4"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Grid>

                                        <!-- IISLogEntry Grid -->
                                        <Grid IsVisible="{Binding SelectedTab.IsThisTabIIS}" Background="#222326">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Заголовки колонок -->
                                            <Grid Grid.Row="0" Background="#2D2F33">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- date -->
                                                    <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- time -->
                                                    <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- s-ip -->
                                                    <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- cs-method -->
                                                    <ColumnDefinition Width="*" MinWidth="150"/> <!-- cs-uri-stem -->
                                                    <ColumnDefinition Width="*" MinWidth="150"/> <!-- cs-uri-query -->
                                                    <ColumnDefinition Width="Auto" MinWidth="70"/> <!-- s-port -->
                                                    <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- cs-username -->
                                                    <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- c-ip -->
                                                    <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- time-taken -->
                                                    <ColumnDefinition Width="Auto" MinWidth="150"/> <!-- cs(User-Agent) -->
                                                    <ColumnDefinition Width="Auto" MinWidth="110"/> <!-- sc-win32-status -->
                                                    <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- sc-status -->
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="date" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="time" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="2" Text="s-ip" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="3" Text="cs-method" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="4" Text="cs-uri-stem" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="5" Text="cs-uri-query" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="6" Text="s-port" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="7" Text="cs-username" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="8" Text="c-ip" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="9" Text="time-taken" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="10" Text="cs(User-Agent)" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="11" Text="sc-win32-status" Padding="8,8" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="12" Text="sc-status" Padding="8,8" FontWeight="SemiBold"/>
                                            </Grid>
                                            
                                            <!-- Содержимое таблицы -->
                                            <ListBox Grid.Row="1" 
                                                     ItemsSource="{Binding SelectedTab.FilteredIISLogEntries}"
                                                     SelectedItem="{Binding SelectedLogEntry}"
                                                     Background="Transparent"
                                                     BorderThickness="0">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="models1:IisLogEntry">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- date -->
                                                                <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- time -->
                                                                <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- s-ip -->
                                                                <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- cs-method -->
                                                                <ColumnDefinition Width="*" MinWidth="150"/> <!-- cs-uri-stem -->
                                                                <ColumnDefinition Width="*" MinWidth="150"/> <!-- cs-uri-query -->
                                                                <ColumnDefinition Width="Auto" MinWidth="70"/> <!-- s-port -->
                                                                <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- cs-username -->
                                                                <ColumnDefinition Width="Auto" MinWidth="120"/> <!-- c-ip -->
                                                                <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- time-taken -->
                                                                <ColumnDefinition Width="Auto" MinWidth="150"/> <!-- cs(User-Agent) -->
                                                                <ColumnDefinition Width="Auto" MinWidth="90"/> <!-- sc-status -->
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Column="0" Text="{Binding DateTime, StringFormat='yyyy-MM-dd'}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding DateTime, StringFormat='HH:mm:ss'}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding ServerIPAddress}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding Method}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="4" Text="{Binding UriStem}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="5" Text="{Binding UriQuery}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="6" Text="{Binding ServerPort}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="7" Text="{Binding UserName}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="8" Text="{Binding ClientIPAddress}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="9" Text="{Binding TimeTaken}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="10" Text="{Binding ShortUserAgent}" Padding="8,4"/>
                                                            <TextBlock Grid.Column="11" Text="{Binding HttpStatus}" Padding="8,4"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Grid>

                                        <!-- RabbitMQ LogEntry Grid -->
                                        <Grid IsVisible="{Binding SelectedTab.IsThisTabRabbitMQ}" Background="#222326">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Заголовки колонок для RabbitMQ -->
                                            <Border Grid.Row="0" Background="#2D2F33" BorderBrush="#404040" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="160"/> <!-- timestamp -->
                                                        <ColumnDefinition Width="100"/> <!-- level -->
                                                        <ColumnDefinition Width="280"/> <!-- message -->
                                                        <ColumnDefinition Width="120"/> <!-- node -->
                                                        <ColumnDefinition Width="*"/> <!-- stacktrace - растягивается -->
                                                        <ColumnDefinition Width="120"/> <!-- queue -->
                                                        <ColumnDefinition Width="180"/> <!-- consumertype -->
                                                        <ColumnDefinition Width="30"/> <!-- pid - минимальная фиксированная -->
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="Timestamp" Padding="4,2" FontWeight="SemiBold"/>
                                                    <Rectangle Grid.Column="0" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="1" Text="Level" Padding="4,2" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                    <Rectangle Grid.Column="1" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="2" Text="Message" Padding="4,2" FontWeight="SemiBold"/>
                                                    <Rectangle Grid.Column="2" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="3" Text="Node" Padding="2,2" FontWeight="SemiBold" FontSize="11"/>
                                                    <Rectangle Grid.Column="3" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="4" Text="StackTrace" Padding="4,2" FontWeight="SemiBold"/>
                                                    <Rectangle Grid.Column="4" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="5" Text="Queue" Padding="4,2" FontWeight="SemiBold"/>
                                                    <Rectangle Grid.Column="5" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="6" Text="ConsumerType" Padding="4,2" FontWeight="SemiBold"/>
                                                    <Rectangle Grid.Column="6" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="7" Text="PID" Padding="1,2" FontWeight="SemiBold" HorizontalAlignment="Center" FontSize="9"/>
                                                </Grid>
                                            </Border>
                                            
                                            <!-- Содержимое таблицы RabbitMQ -->
                                            <ListBox Grid.Row="1" 
                                                     ItemsSource="{Binding SelectedTab.FilteredRabbitMQLogEntries}"
                                                     SelectedItem="{Binding SelectedLogEntry}"
                                                     Background="Transparent"
                                                     BorderThickness="0">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate x:DataType="models1:RabbitMqLogEntry">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="160"/> <!-- timestamp -->
                                                                <ColumnDefinition Width="100"/> <!-- level -->
                                                                <ColumnDefinition Width="280"/> <!-- message -->
                                                                <ColumnDefinition Width="120"/> <!-- node -->
                                                                <ColumnDefinition Width="*"/> <!-- stacktrace - растягивается -->
                                                                <ColumnDefinition Width="120"/> <!-- queue -->
                                                                <ColumnDefinition Width="180"/> <!-- consumertype -->
                                                                <ColumnDefinition Width="30"/> <!-- pid - минимальная фиксированная -->
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Column="0" Text="{Binding EffectiveTimestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Padding="4,2" TextTrimming="CharacterEllipsis" VerticalAlignment="Top"/>
                                                            <Rectangle Grid.Column="0" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <Border Grid.Column="1" Background="{Binding EffectiveLevel, Converter={StaticResource LogLevelToBrushConverter}}" 
                                                                    CornerRadius="4" 
                                                                    Padding="4,2" 
                                                                    HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Top"
                                                                    MinWidth="80">
                                                                <TextBlock Text="{Binding EffectiveLevel, Converter={StaticResource StringToUpperConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                                            </Border>
                                                            <Rectangle Grid.Column="1" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding EffectiveMessage}" Padding="4,2" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                                            <Rectangle Grid.Column="2" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding EffectiveNodeDisplay}" Padding="2,2" TextTrimming="CharacterEllipsis" VerticalAlignment="Top" ToolTip.Tip="{Binding EffectiveNode}" FontSize="10"/>
                                                            <Rectangle Grid.Column="3" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <Border Grid.Column="4" 
                                                                    BorderBrush="#404040" 
                                                                    BorderThickness="1" 
                                                                    CornerRadius="3"
                                                                    Background="#1E1E1E"
                                                                    Padding="4,2">
                                                                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                                              VerticalScrollBarVisibility="Auto"
                                                                              MaxHeight="80"
                                                                              Background="Transparent">
                                                                    <TextBlock Text="{Binding EffectiveStackTrace}" 
                                                                               TextWrapping="Wrap"
                                                                               VerticalAlignment="Top"
                                                                               Background="Transparent"
                                                                               Cursor="Hand"
                                                                               DoubleTapped="OnStackTraceDoubleTapped"/>
                                                                </ScrollViewer>
                                                            </Border>
                                                            <Rectangle Grid.Column="4" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <TextBlock Grid.Column="5" Text="{Binding EffectiveQueue}" Padding="4,2" TextTrimming="CharacterEllipsis" VerticalAlignment="Top"/>
                                                            <Rectangle Grid.Column="5" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <TextBlock Grid.Column="6" Text="{Binding EffectiveConsumerType}" Padding="4,2" TextTrimming="CharacterEllipsis" VerticalAlignment="Top"/>
                                                            <Rectangle Grid.Column="6" Width="1" Fill="#404040" HorizontalAlignment="Right"/>
                                                            <TextBlock Grid.Column="7" Text="{Binding EffectiveProcessId}" Padding="1,2" TextTrimming="CharacterEllipsis" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="8"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Grid>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Errors only">
                            <DataGrid ItemsSource="{Binding MainView.ErrorLogEntries}"
                                      SelectedItem="{Binding MainView.SelectedLogEntry}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      CanUserReorderColumns="True"
                                      GridLinesVisibility="All"
                                      BorderThickness="1"
                                      BorderBrush="Gray">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="160"/>
                                    <DataGridTemplateColumn Header="Level" Width="130">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models1:LogEntry">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
                                                    <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                    <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="4*"/>
                                    <DataGridTextColumn Header="Recommendation" Binding="{Binding Recommendation}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                        <!-- New TabItem for Errors in All -->
                        <TabItem Header="Errors in All"
                                 IsVisible="{Binding MainView.IsMultiFileModeActive}">
                            <DataGrid ItemsSource="{Binding MainView.AllErrorLogEntries}"
                                      SelectedItem="{Binding MainView.SelectedLogEntry}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False"
                                      CanUserSortColumns="True"
                                      CanUserReorderColumns="True"
                                      GridLinesVisibility="All"
                                      BorderThickness="1"
                                      BorderBrush="Gray">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="160"/>
                                    <DataGridTemplateColumn Header="Level" Width="130">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate x:DataType="models1:LogEntry">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
                                                    <PathIcon Data="{Binding LevelIcon}" Width="16" Height="16" Foreground="{Binding LevelColor}"/>
                                                    <TextBlock Text="{Binding Level}" VerticalAlignment="Center" Foreground="{Binding LevelColor}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="4*"/>
                                    <DataGridTextColumn Header="Source File" Binding="{Binding SourceTabTitle}" Width="2*"/> 
                                    <DataGridTextColumn Header="Recommendation" Binding="{Binding Recommendation}" Width="3*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
            
            <!-- Dashboard Panel -->
            <Grid 
                IsVisible="{Binding MainView.IsDashboardVisible}"
                Grid.Row="2" Grid.Column="0" 
                Grid.ColumnSpan="2"
                Background="#222326"
                ZIndex="100">
                <Grid RowDefinitions="Auto,*">
                    <!-- Dashboard Header -->
                    <Border Grid.Row="0" Background="#262729" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="{Binding MainView.IsIISDashboardVisible, Converter={StaticResource StringShortenerConverter}, ConverterParameter='IIS Logs Dashboard|Log Analysis Dashboard'}" 
                                      FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center" />
                            
                            <!-- Dashboard Type is now determined automatically by file type -->
                            
                            <!-- Existing Action Buttons -->
                            <Button Grid.Column="4" Classes="icon-button" Command="{Binding MainView.ToggleDashboardVisibilityCommand}" ToolTip.Tip="Close Dashboard">
                                <TextBlock Text="✖" FontSize="16" />
                            </Button>
                            <Button Grid.Column="5" Classes="icon-button" Command="{Binding MainView.LoadFileCommand}" ToolTip.Tip="Load New File">
                                <TextBlock Text="📂" FontSize="16" />
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Dashboard Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="16">
                             <!-- Dashboard content is based on file type automatically -->
                             
                            <!-- Стандартный дашборд для обычных логов -->
                            <Grid ColumnDefinitions="*,*" Margin="0,0,0,20" IsVisible="{Binding MainView.IsStandardDashboardVisible}">
                                <!-- Левая колонка -->
                                <StackPanel Grid.Column="0" Margin="5,0,10,0" Spacing="20">
                                    <!-- Log Levels Over Time -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Log Levels Over Time" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="350">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.LevelsOverTimeSeries}"
                                                    XAxes="{Binding MainView.TimeAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="450"
                                                    Height="300"
                                                    LegendPosition="Bottom">
                                                    <lvc:CartesianChart.LegendTextPaint>
                                                        <lvcskia:SolidColorPaint Color="#FFFFFFFF" />
                                                    </lvc:CartesianChart.LegendTextPaint>
                                                    <lvc:CartesianChart.LegendBackgroundPaint>
                                                        <lvcskia:SolidColorPaint Color="#FF333333" />
                                                    </lvc:CartesianChart.LegendBackgroundPaint>
                                                </lvc:CartesianChart>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                
                                    <!-- Sources Distribution -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Log Sources Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="350">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.SourcesDistributionSeries}"
                                                    XAxes="{Binding MainView.SourceAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="450"
                                                    Height="300"
                                                    LegendPosition="Hidden"/>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Правая колонка -->
                                <StackPanel Grid.Column="1" Margin="10,0,5,0" Spacing="20">
                                    <!-- Error Trend -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Activity Trends" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="300">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.ErrorTrendSeries}"
                                                    XAxes="{Binding MainView.HoursAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="450" 
                                                    Height="300"
                                                    LegendPosition="Right">
                                                    <lvc:CartesianChart.LegendTextPaint>
                                                        <lvcskia:SolidColorPaint Color="#FFFFFFFF" />
                                                    </lvc:CartesianChart.LegendTextPaint>
                                                    <lvc:CartesianChart.LegendBackgroundPaint>
                                                        <lvcskia:SolidColorPaint Color="#FF333333" />
                                                    </lvc:CartesianChart.LegendBackgroundPaint>
                                                </lvc:CartesianChart>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- IIS дашборд -->
                            <Grid ColumnDefinitions="*,*" Margin="0,0,0,20" IsVisible="{Binding MainView.IsIISDashboardVisible}">
                                <!-- Левая колонка -->
                                <StackPanel Grid.Column="0" Margin="5,0,10,0" Spacing="20">
                                    <!-- HTTP Status Codes -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="HTTP Status Code Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="350">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.TopErrorsSeries}"
                                                    XAxes="{Binding MainView.ErrorMessageAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="450"
                                                    Height="300"
                                                    LegendPosition="Hidden"/>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                
                                    <!-- Status Code Distribution -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Status Code Distribution" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="350">
                                                <lvc:PieChart
                                                    Series="{Binding MainView.LogDistributionSeries}"
                                                    Width="450"
                                                    Height="400"
                                                    LegendPosition="Bottom"
                                                    TooltipPosition="Top"
                                                    InitialRotation="0"
                                                    MaxAngle="360">
                                                    <lvc:PieChart.LegendTextPaint>
                                                        <lvcskia:SolidColorPaint Color="#FFFFFFFF" />
                                                    </lvc:PieChart.LegendTextPaint>
                                                    <lvc:PieChart.LegendBackgroundPaint>
                                                        <lvcskia:SolidColorPaint Color="#FF333333" />
                                                    </lvc:PieChart.LegendBackgroundPaint>
                                                </lvc:PieChart>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                        </StackPanel>
                                
                                <!-- Правая колонка -->
                                <StackPanel Grid.Column="1" Margin="10,0,5,0" Spacing="20">
                                    <!-- Activity By Hour -->
                                    <Border Background="#2D2F33" BorderBrush="#3E3F45" BorderThickness="1" CornerRadius="10" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Activity By Hour" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                                            <Viewbox MaxHeight="300">
                                                <lvc:CartesianChart
                                                    Series="{Binding MainView.TimeHeatmapSeries}"
                                                    XAxes="{Binding MainView.HoursAxis}"
                                                    YAxes="{Binding MainView.CountAxis}"
                                                    Width="450" 
                                                    Height="300"
                                                    LegendPosition="Right">
                                                    <lvc:CartesianChart.LegendTextPaint>
                                                        <lvcskia:SolidColorPaint Color="#FFFFFFFF" />
                                                    </lvc:CartesianChart.LegendTextPaint>
                                                    <lvc:CartesianChart.LegendBackgroundPaint>
                                                        <lvcskia:SolidColorPaint Color="#FF333333" />
                                                    </lvc:CartesianChart.LegendBackgroundPaint>
                                                </lvc:CartesianChart>
                                            </Viewbox>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- New Adaptive Dashboard Section (DISABLED FOR NOW) -->
                            <Grid Margin="0,20,0,20" IsVisible="False">
                                <!-- Will be enabled in next iteration -->
                                <TextBlock Text="Adaptive Dashboard - Coming Soon" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontSize="16" 
                                           Opacity="0.5"/>
                            </Grid>
                         </StackPanel>
                     </ScrollViewer>
                 </Grid>
            </Grid>
            
            <Panel Grid.Row="2" IsVisible="{Binding MainView.IsLoading}">
                <Border Background="#55262729" 
                        Opacity="0.9" 
                        CornerRadius="8">
                    <StackPanel Spacing="16" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                   Width="220" />
                        <TextBlock Text="{Binding MainView.StatusMessage}"
                                   HorizontalAlignment="Center" 
                                   Foreground="#FFFFFF"
                                   FontSize="14" />
                    </StackPanel>
                </Border>
            </Panel>
            
            <Border Grid.Row="3" 
                    Padding="16,12"
                    Background="#262729">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding MainView.StatusMessage}" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Foreground="#CCCCCC"
                              FontSize="14" />
                    
                    <!-- Кнопка настроек и обновлений -->
                    <Button Grid.Column="1" 
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8,4"
                            Margin="16,0,16,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                                                         Command="{Binding ShowUpdateSettingsCommand}"
                             ToolTip.Tip="Settings and Updates">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="⚙️" 
                                       FontSize="14" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" 
                                       FontSize="13" 
                                       Foreground="#AAAAAA"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#333333"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <!-- Логотип приложения, версия и счетчик записей -->
                    <StackPanel Grid.Column="2" 
                              Orientation="Horizontal"
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Right"
                              Margin="0,0,16,0"
                              Spacing="12">
                        
                        <!-- Entry Counter -->
                        <TextBlock Text="{Binding MainView.LogEntries.Count, StringFormat=Entries: {0}}" 
                                   VerticalAlignment="Center" 
                                   Foreground="#AAAAAA"
                                   FontSize="13" />
                        
                        <!-- Separator -->
                        <TextBlock Text="|" 
                                   VerticalAlignment="Center" 
                                   Foreground="#555555"
                                   FontSize="13" />
                        
                        <!-- Logo and Version -->
                        <StackPanel Orientation="Horizontal" 
                                   VerticalAlignment="Center"
                                   Spacing="6">
                            <!-- Application Logo -->
                            <Border Width="20" Height="20" 
                                    Background="#0078D7" 
                                    CornerRadius="3">
                                <TextBlock Text="OG" 
                                           FontSize="12" 
                                           FontWeight="Bold" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                            <TextBlock Text="🏷️" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AppVersion}" 
                                       VerticalAlignment="Center" 
                                       Foreground="#777777"
                                       FontSize="14" 
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Panel>
</Window>
