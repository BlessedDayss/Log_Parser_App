<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true"
      internalLogLevel="Debug"
      internalLogFile="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/internal-nlog.log"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd">

  <targets async="true">
    <target xsi:type="FileTarget"
            name="logfile"
            fileName="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/app-${date:format=yyyy-MM-dd}.log"
            archiveFileName="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/archives/app-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8">
      <layout xsi:type="JsonLayout" includeAllProperties="true">
        <attribute name="time" layout="${longdate}"/>
        <attribute name="level" layout="${level:uppercase=true}"/>
        <attribute name="logger" layout="${logger}"/>
        <attribute name="message" layout="${message}"/>
        <attribute name="exception" layout="${exception:format=tostring}"/>
        <attribute name="threadId" layout="${threadid}"/>
        <attribute name="callsite" layout="${callsite:fileName=true:includeSourcePath=true:methodName=true}"/>
        <attribute name="stacktrace" layout="${stacktrace:topFrames=10}"/>
      </layout>
    </target>

    <!-- Separate file for errors only -->
    <target xsi:type="File"
            name="errorfile"
            fileName="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/error-${date:format=yyyy-MM-dd}.log"
            archiveFileName="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/archives/error-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            encoding="utf-8"
            layout="${longdate} ${uppercase:${level}} ${message}${newline}${exception:format=tostring,data:maxInnerExceptionLevel=10}${newline}---Stack Trace---${newline}${stacktrace:topFrames=20}${newline}-------------------${newline}"/>
    
    <!-- Console output for additional information -->
    <target xsi:type="Console" name="console"
            encoding="utf-8"
            layout="${date:format=HH\:mm\:ss} [${level:uppercase=true}] ${message} ${exception:format=message}"/>
    
    <!-- Performance indicator for tracking long operations -->
    <target xsi:type="File"
            name="perflog"
            fileName="${specialfolder:folder=LocalApplicationData}/Log_Parser_App/logs/performance.log"
            encoding="utf-8"
            layout="${longdate} [${threadid}] ${message}"/>
      </targets>
    
      <rules>
    <!-- Log all information to the main log -->
    <logger name="*" minlevel="Debug" writeTo="logfile"/>
    
    <!-- Errors and warnings to a separate file -->
    <logger name="*" minlevel="Warn" writeTo="errorfile"/>
    
    <!-- Performance logs -->
    <logger name="*" level="Trace" writeTo="perflog">
      <filters>
        <when condition="contains('${message}','PERF:')" action="Log"/>
        <when condition="true" action="Ignore"/>
      </filters>
    </logger>
    
    <!-- Console output for debugging -->
    <logger name="*" minlevel="Info" writeTo="console"/>
  </rules>
</nlog>
